{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('dashboard') }}
{% endblock %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
    <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-md-3 col-lg-2 mr-0 px-3" href="#">Admin Panel v1.0</a>
        <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-toggle="collapse" data-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search">
        <ul class="navbar-nav px-3">
            <li class="nav-item text-nowrap">
                <a class="nav-link" href="{{ path('home') }}">EXIT</a>
            </li>
        </ul>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="sidebar-sticky pt-3">

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>GENERAL</span>
                    </h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.pathInfo == path('admin') %}active{% endif %}" href="{{ path('admin') }}">
                                <i class="bi bi-house-fill"></i>
                                Dashboard
                            </a>
                        </li>
                    </ul>

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>TIRES</span>
                    </h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.pathInfo == path('admin_tires_features') %}active{% endif %}" href="{{ path('admin_tires_features') }}">
                                <i class="bi bi-tags-fill"></i>
                                Features
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.pathInfo == path('admin_tires_brands') %}active{% endif %}" href="{{ path('admin_tires_brands') }}">
                                <i class="bi bi-tags-fill"></i>
                                Brands
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.pathInfo == path('admin_tires_models') %}active{% endif %}" href="{{ path('admin_tires_models') }}">
                                <i class="bi bi-bookmark"></i>
                                Models
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.pathInfo == path('admin_tires_products') %}active{% endif %}" href="{{ path('admin_tires_products') }}">
                                <i class="bi bi-gear-wide"></i>
                                Products
                            </a>
                        </li>
                    </ul>

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>VEHICLES</span>
                    </h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.pathInfo == path('admin') %}active{% endif %}" href="{{ path('admin') }}">
                                <i class="bi bi-house-fill"></i>
                                Types
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.pathInfo == path('admin') %}active{% endif %}" href="{{ path('admin') }}">
                                <i class="bi bi-house-fill"></i>
                                Brands
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.pathInfo == path('admin') %}active{% endif %}" href="{{ path('admin') }}">
                                <i class="bi bi-house-fill"></i>
                                Models
                            </a>
                        </li>
                    </ul>

                </div>
            </nav>

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">{% block content_header %}Dashboard{% endblock %}</h1>
                </div>
                {% block content %}
                {% endblock %}
            </main>
        </div>
    </div>
    {% block bottom_javascript %}
        {{ encore_entry_script_tags('dashboard') }}
    {% endblock %}
{% endblock %}