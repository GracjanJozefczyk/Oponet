<div class="row pt-3">
    {% if brandForm.vars.data.imageUrl is defined %}
        <div class="col-2" id="old_brand_image">
            <div class="card h-100 text-dark border-dark mb-3 bg-light shadow">
                <div class="card-header">
                    <i class="bi bi-image-fill mr-2"></i>
                    BRAND IMAGE
                </div>
                <div class="card-body">
                    <img src="{{ asset(brandForm.vars.data.imageUrl) }}" class="img-fluid">
                </div>
            </div>
        </div>
    {% endif %}
    <div class="col">
        <div class="card h-100 text-dark border-dark mb-3 bg-light shadow">
            <div class="card-header">
                <i class="bi bi-plus-square mr-2"></i>
                UPLOAD BRAND IMAGE
            </div>
            <div class="card-body">
                <form class="dropzone p3" id="dropzone" action="{{ path('admin_tires_brands_uploadImage') }}"></form>
            </div>
        </div>
    </div>
</div>

<div class="row pt-4">
    <div class="col-12">
        <div class="card text-dark border-dark mb-3 bg-light shadow">
            <div class="card-header">
                <i class="bi bi-blockquote-left mr-2"></i>
                BRAND DESCRIPTION
            </div>
            <div class="card-body">
                {{ form_start(brandForm) }}
                {{ form_row(brandForm.name) }}
                {{ form_row(brandForm.imageUrl) }}
                {{ form_row(brandForm.description) }}
                <div class="row pt-3">
                    <div class="col-6">
                        <a href="{{ path('admin_tires_brands') }}" class="btn btn-warning btn-block">
                            <i class="bi bi-x-circle-fill"></i>
                            Cancel
                        </a>
                    </div>
                    <div class="col-6">
                        <button type="submit" class="btn btn-success btn-block" name="submit">
                            <i class="bi bi-check-circle-fill"></i>
                            {{ action_text }}
                        </button>
                    </div>
                </div>
                {{ form_end(brandForm) }}
            </div>
        </div>
    </div>
</div>
<div id="modal" class="modal" tabindex="-1" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Crop Image</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div style="max-width: 100%" id="img_container">

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="cropperSave">Save</button>
            </div>
        </div>
    </div>
</div>