{% extends 'admin/index.html.twig' %}

{% block title %}Products{% endblock %}

{% block content_header %}Products{% endblock %}

{% block content %}
    <div class="row pt-3">

        <div class="col-sm-3">
            <div class="card text-primary border-primary mb-3 bg-light shadow">
                <div class="card-header">
                    <i class="bi bi-tags-fill mr-2"></i>
                    TOTAL PRODUCTS
                </div>
                <div class="card-body">
                    <button class="btn btn-outline-primary  btn-block" disabled>{{ products|length }}</button>
                </div>
            </div>
        </div>

        <div class="col-sm-3">
            <div class="card text-success border-success mb-3 bg-light shadow">
                <div class="card-header">
                    <i class="bi bi-plus-square mr-2"></i>
                    NEW PRODUCT
                </div>
                <div class="card-body">
                    <a href="{{ path('admin_tires_products_new') }}" class="btn btn-outline-success btn-block">ADD</a>
                </div>
            </div>
        </div>

    </div>

    <div class="row pt-3">

        <div class="col-12">
            <div class="card text-dark border-dark mb-3 bg-light shadow">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <i class="bi bi-list-check mr-2"></i>
                        LIST OF PRODUCTS
                    </div>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
                            <i class="bi bi-funnel"></i>
                            Sort by
                        </button>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-light table-striped">
                        <thead>
                        <tr>
                            <th scope="col" style="width: 2%">#</th>
                            <th scope="col">Brand</th>
                            <th scope="col">Name</th>
                            <th scope="col">Size</th>
                            <th scope="col">Symbol</th>
                            <th scope="col">Price</th>
                            <th scope="col">Year</th>
                            <th scope="col">Vehicle</th>
                            <th scope="col">Quantity</th>
                            <th scope="col" style="width: 5%">Show</th>
                            <th scope="col" style="width: 5%">Edit</th>
                            <th scope="col" style="width: 5%">Delete</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for product in products %}
                            <tr>
                                <td class="align-middle">{{ product.id }}</td>
                                <td class="align-middle">{{ product.model.brand }}</td>
                                <td class="align-middle">{{ product.model.name }}</td>
                                <td class="align-middle">
                                    {{ product.width }}/{{ product.height }} R{{ product.rimSize }} {% if product.reinforced %}XL{% endif %}
                                </td>
                                <td class="align-middle">{{ product.loadIndex }}{{ product.speedRating }}</td>
                                <td class="align-middle">{{ product.price }}</td>
                                <td class="align-middle">{{ product.year }}</td>
                                <td class="align-middle">{{ product.model.vehicleType }}</td>
                                <td class="align-middle">{{ product.quantity }}</td>
                                <td class="align-middle">
                                    <a class="btn btn-outline-success" href="#">
                                        <i class="bi bi-search"></i>
                                    </a>
                                </td>
                                <td class="align-middle">
                                    <a class="btn btn-outline-warning" href="{{ path('admin_tires_products_edit', { id: product.id }) }}">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                </td>
                                <td class="align-middle">
                                    <a class="btn btn-outline-danger" href="{{ path('admin_tires_products_delete', { id: product.id }) }}">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
