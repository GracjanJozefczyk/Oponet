{% extends 'security/common.html.twig' %}

{% block form %}
    <h1 class="login-title">Log in</h1>
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div class="form-group">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        <div class="row">
            <div class="col-6">
                <a href="{{ path('home') }}" class="btn btn-lg btn-warning btn-block">
                    Cancel
                </a>
            </div>
            <div class="col-6">
                <button class="btn btn-lg btn-primary btn-block" type="submit" name="submit">
                    Sign in
                </button>
            </div>
        </div>
    </form>
    <p class="login-wrapper-footer-text mt-2">Don't have an account? <a href="{{ path('app_register') }}" class="text-reset">Register here</a></p>
{% endblock %}
