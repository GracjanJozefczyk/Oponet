<div class="container-xl py-4">
    <div class="row">
        {% for brand in brands %}
            <div class="col-6 col-md-4 col-lg-2 hover-opacity">
                <a href="{{ path('show_brand', { slug: brand.slug }) }}">
                    <img src="{{ asset(brand.imageUrl) }}" class="img-fluid" alt="{{ brand.name }}">
                </a>
            </div>
        {% endfor %}
    </div>
</div>