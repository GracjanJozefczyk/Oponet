{% extends 'store/index.html.twig' %}

{% block content %}
    <div class="album py-3 bg-light">
        <div class="container">
            {# Breadcrumb #}
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-light">
                    <li class="breadcrumb-item" aria-current="page"><a href="{{ path('home') }}">Oponet</a></li>
                    <li class="breadcrumb-item active" aria-current="page">{{ brand.name }}</li>
                </ol>
            </nav>
            {# Brand description #}
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card shadow">
                        <div class="row no-gutters align-items-center">
                            {% if brand.imageUrl %}
                            <div class="col-md-3">
                                <img src="{{ asset(brand.imageUrl)|imagine_filter('thumb_400') }}" class="img-fluid" alt="{{ brand.name }} logo">
                            </div>
                            {% endif %}
                            {% if brand.description %}
                            <div class="col-md-9">
                                <div class="card-body">
                                    {{ brand.description|markdown_to_html }}
                                </div>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            {# Available models #}
            <div class="row mb-4">
                {% for model in brand.tireModels %}
                    {% if model.tireProducts|length > 0 %}
                        <div class="col-sm-4">
                            <div class="card mb-4 shadow product-card">
                                <div class="card-header">
                                    {{ model.name }}
                                </div>
                                <div class="carousel slide carousel-fade" data-ride="carousel">
                                    <div class="carousel-inner">
                                        {% for image in model.imagesPaths %}
                                            <div class="carousel-item {% if loop.first %}active{% endif %}">
                                                <img src="{{ asset(image) }}" class="d-block w-100" alt="{{ model.name }}">
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                                <div class="card-body pt-0 px-0">
                                    <hr class="mt-2 mx-3">
                                    <div class="d-flex flex-row justify-content-between px-3 pb-4">
                                        <div class="d-flex flex-column">
                                            <span class="text-muted">PRICE FROM</span>
                                            <small class="text-muted">Min.</small>
                                        </div>
                                        <div class="d-flex flex-column">
                                            <div class="d-flex flex-row justify-content-around">
                                                <i class="bi bi-caret-down-fill"></i>
                                                {# Count max and min price #}
                                                {% set prices = [] %}
                                                {% for product in model.tireProducts.values %}
                                                    {% set prices = prices|merge([product.price]) %}
                                                {% endfor %}
                                                <h5 class="mb-0">{{ min(prices) }}</h5>
                                            </div>
                                            <small class="text-muted text-right">per piece</small>
                                        </div>
                                    </div>
                                    <hr class="mt-2 mx-3">
                                    <div class="d-flex flex-row justify-content-between px-3 pb-4">
                                        <div class="d-flex flex-column">
                                            <span class="text-muted">PRICE TO</span>
                                            <small class="text-muted">Max.</small>
                                        </div>
                                        <div class="d-flex flex-column">
                                            <div class="d-flex flex-row justify-content-around">
                                                <i class="bi bi-caret-up-fill"></i>
                                                <h5 class="mb-0">{{ max(prices) }}</h5>
                                            </div>
                                            <small class="text-muted text-right">per piece</small>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row justify-content-around p-3" style="background: #ECEDF1">
                                        <div class="d-flex flex-column align-items-center">
                                            <small class="text-muted mb-2">{{ model.season|upper }}</small>
                                            <div class="d-flex flex-row">
                                                {% if model.season == 'winter' %}
                                                    <i class="bi bi-snow" style="font-size: 1.5rem"></i>
                                                {% elseif model.season == 'summer' %}
                                                    <i class="bi bi-sun" style="font-size: 1.5rem"></i>
                                                {% else %}
                                                    <i class="bi bi-snow" style="font-size: 1.5rem"></i>
                                                    <i class="bi bi-sun" style="font-size: 1.5rem"></i>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="d-flex flex-column align-items-center">
                                            <small class="text-muted mb-2">{{ model.vehicleType|upper }}</small>
                                            <div class="d-flex flex-row">
                                                <img src="{{ asset('suv.png') }}" style="width: 40px">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mx-3 mb-2 pt-3">
                                        <a href="{{ path('show_model', { slug: model.slug }) }}" type="button" class="btn btn-danger btn-block">SHOW MODEL</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}