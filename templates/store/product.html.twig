{% extends 'store/index.html.twig' %}

{% block content %}
<div class="album py-3 bg-light">
    <div class="container">
        {# Breadcrumb #}
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-light">
                <li class="breadcrumb-item" aria-current="page"><a href="{{ path('home') }}">Oponet</a></li>
                <li class="breadcrumb-item" aria-current="page"><a href="{{ path('show_brand', { slug: product.model.brand.slug }) }}">{{ product.model.brand.name }}</a></li>
                <li class="breadcrumb-item" aria-current="page"><a href="{{ path('show_model', { slug: product.model.slug }) }}">{{ product.model.name }}</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ product.width }}/{{ product.height }} R{{ product.rimSize }} {{ product.loadIndex }}{{ product.speedRating }}</li>
            </ol>
        </nav>
        {# Brand description #}
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="row no-gutters align-items-center">
                        <div class="col-md-3">
                            <img src="{{ asset(product.model.brand.imageUrl) }}" class="img-fluid">
                        </div>
                        <div class="col-md-9">
                            <div class="card-body">
                                {{ product.model.brand.description|markdown_to_html }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{# Product description #}
        <div class="row mb-4">
