{% extends 'store/index.html.twig' %}

{% block content %}
    <div class="container py-4">
        <div class="row">
            <div class="col">
                <div class="card shadow mb-4">
                    <div class="card-header">Edit profile</div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="form-row">
                                <div class="col-sm-6">
                                    {{ form_row(form.firstName) }}
                                </div>
                                <div class="col-sm-6">
                                    {{ form_row(form.lastName) }}
                                </div>
                            </div>
                        {{ form_row(form.phone) }}
                        <div class="form-row">
                            <div class="col-sm-6">
                                {{ form_row(form.street) }}
                            </div>
                            <div class="col-sm-6">
                                {{ form_row(form.house) }}
                            </div>
                        </div>
                            {{ form_row(form.city) }}
                        <div class="row">
                            <div class="col-6">
                                <a href="{{ path('show_profile') }}" class="btn btn-warning btn-block">Cancel</a>
                            </div>
                            <div class="col-6">
                                <button type="submit" class="btn btn-success btn-block">Update</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}